# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  check:
    if: 
      - {{source.diff.files | isFormattingChange}}
    run:
      - action: add-comment@v1
        args:
          comment: |
            {{source.diff.files | dump | safe}} and {{ source.diff.files | map(attr="new_content") | dump | safe }}
