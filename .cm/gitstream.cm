# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  check:
    if: 
      - {{source.diff.files | isFormattingChange}}
      - {{source.diff.files | map(attr='new_content')}}
    run:
      - action: add-label@v1
        args:
          label: 'new-contributor'
          color: '#FBBD10'
